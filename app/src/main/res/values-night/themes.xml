<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BestStatusAndQuotesYMGDevelopers" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/bold</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BestStatusAndQuotesYMGDevelopers.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Menu_text" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="SimpleSearchViewStyle">
        <!-- Change search textColor -->
        <item name="android:textColor">@color/black</item>
        <!-- Search bar/card background -->

        <item name="cursorColor">@color/black</item>
<!--        <item name="hintColor">@color/gnt_gray</item>-->
        <item name="background">@color/bgMain</item>
        <!-- Enable voice search -->
        <item name="voiceSearch">true</item>
    </style>

    <style name="Menu_icon" parent="Theme.BestStatusAndQuotesYMGDevelopers">
        <item name="iconTint">@color/black</item>
    </style>


    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.BestStatusAndQuotesYMGDevelopers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BestStatusAndQuotesYMGDevelopers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>